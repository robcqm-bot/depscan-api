# App
APP_ENV=production
APP_PORT=8001
SECRET_KEY=

# Database
DATABASE_URL=postgresql+asyncpg://user:pass@localhost/depscan

# Redis (database 1 — database 0 reservada para SecurityScan)
REDIS_URL=redis://localhost:6379/1

# Stripe
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
# One-time: single scan packs
STRIPE_PRICE_SINGLE_STARTER=price_xxx   # MXN $25
STRIPE_PRICE_SINGLE_PRO=price_xxx       # MXN $80
STRIPE_PRICE_SINGLE_BUSINESS=price_xxx  # MXN $299
# One-time: deep scan packs
STRIPE_PRICE_DEEP_STARTER=price_xxx     # MXN $30
STRIPE_PRICE_DEEP_PRO=price_xxx         # MXN $120
STRIPE_PRICE_DEEP_BUSINESS=price_xxx    # MXN $499
# Subscriptions
STRIPE_PRICE_MONITOR=price_xxx          # MXN $199/mes
STRIPE_PRICE_UNLIMITED=price_xxx        # MXN $999/mes

# External APIs
ABUSEIPDB_API_KEY=
# WHOIS_API_KEY — ya no se usa, reemplazado por python-whois (gratis, sin API key)
DEEPSEEK_API_KEY=
ANTHROPIC_API_KEY=   # fallback when DeepSeek unavailable

# Monitoring alerts
ALERT_SCORE_DROP_THRESHOLD=20
MONITOR_SCAN_INTERVAL_HOURS=6
